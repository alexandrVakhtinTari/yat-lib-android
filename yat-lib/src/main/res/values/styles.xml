<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--item name="android:windowDrawsSystemBarBackgrounds">true</item-->
        <!--item name="android:windowTranslucentStatus">true</item-->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="backgroundColor">@color/black</item>
        <item name="containerBackgroundColor">@color/dark_blue_background</item>
        <item name="viewElevation">0dp</item>
        <item name="yatLogoDrawable">@drawable/yat_logo_white</item>
        <item name="infoTitleColor">@color/white</item>
        <item name="infoTitleFont">CIRCULAR_SPOTIFY_BOOK</item>
        <item name="infoDescriptionFont">CIRCULAR_SPOTIFY_BOOK</item>
        <item name="primaryButtonColor">@color/blue</item>
        <item name="secondaryButtonColor">@color/secondary_button_dark</item>
        <item name="secondaryButtonTextColor">@color/x_light_gray</item>
        <item name="buttonFont">CIRCULAR_SPOTIFY_BOOK</item>
        <item name="infoPage2BackgroundDrawable">@drawable/intro_page_2_bg_graphic_dark</item>
        <item name="webLinkIconDrawable">@drawable/web_link_icon_dark</item>
        <item name="infoPage3BackgroundDrawable">@drawable/intro_page_3_bg_graphic_dark</item>
        <item name="termsFont">CIRCULAR_SPOTIFY_BOOK</item>
        <item name="backButtonDrawable">@drawable/back_button_dark</item>
        <item name="closeButtonDrawable">@drawable/close_button_dark</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="backgroundColor">@color/white</item>
        <item name="containerBackgroundColor">@color/white</item>
        <item name="viewElevation">5dp</item>
        <item name="yatLogoDrawable">@drawable/yat_logo_black</item>
        <item name="infoTitleColor">@color/black</item>
        <item name="infoTitleFont">AVENIR_LT_STD_BLACK</item>
        <item name="infoDescriptionFont">AVENIR_LT_STD_MEDIUM</item>
        <item name="primaryButtonColor">@color/purple</item>
        <item name="secondaryButtonColor">@color/secondary_button_light</item>
        <item name="secondaryButtonTextColor">@color/black</item>
        <item name="buttonFont">AVENIR_LT_STD_HEAVY</item>
        <item name="infoPage2BackgroundDrawable">@drawable/intro_page_2_bg_graphic_light</item>
        <item name="webLinkIconDrawable">@drawable/web_link_icon_light</item>
        <item name="infoPage3BackgroundDrawable">@drawable/intro_page_3_bg_graphic_light</item>
        <item name="termsFont">AVENIR_LT_STD_MEDIUM</item>
        <item name="backButtonDrawable">@drawable/back_button_light</item>
        <item name="closeButtonDrawable">@drawable/close_button_light</item>
    </style>

</resources>
