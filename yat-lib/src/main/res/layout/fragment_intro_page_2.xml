<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?containerBackgroundColor">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/yat_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/yat_logo_top_margin"
        android:src="@drawable/yat_logo" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/transparent"
        android:src="?closeButtonDrawable" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/title"
        android:layout_gravity="center"
        android:layout_marginHorizontal="60dp"
        android:src="@drawable/screen2_min" />

    <yat.android.ui.components.CustomFontTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/description_text_view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/info_title_bottom_margin"
        android:gravity="center"
        android:letterSpacing="0.015"
        android:lineSpacingExtra="6dp"
        android:text="@string/step_2_title"
        android:textColor="?infoTitleColor"
        android:textSize="@dimen/info_title_font_size"
        app:customFont="?infoTitleFont" />

    <yat.android.ui.components.CustomFontTextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/next_button"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="@dimen/info_description_bottom_margin"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6dp"
        android:text="@string/step_2_description"
        android:textColor="@color/x_light_gray"
        android:textSize="@dimen/info_description_font_size"
        app:customFont="?infoDescriptionFont" />

    <yat.android.ui.components.CustomFontButton
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/primary_button_bg"
        android:text="@string/common_next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:customFont="?buttonFont" />

</RelativeLayout>